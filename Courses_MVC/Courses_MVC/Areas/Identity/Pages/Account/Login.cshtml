@page "/Login/"
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
    var thongbao = TempData["ErrorMessage"];
}


@if (TempData.ContainsKey("ErrorMessage")) // hiển thị thông báo lỗi nêu có dữ liệu trong TempData
{
    <partial name="/Areas/Identity/Pages/Account/_StatusMessage.cshtml" model="thongbao" />

}

<style>
    .login-form-icon {
        text-align: center;
        font-size: 100px;
        color: #6a6868;
    }
</style>
<div class="row">
    <div class="col-md-10 offset-md-1">
        <section>
            <div class="login-form-icon">
                <i class="fas fa-user-circle"></i>
            </div>
            <form id="account" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.UserNameOrEmail"></label>
                    <input asp-for="Input.UserNameOrEmail" class="form-control" />
                    <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Đăng nhập</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng kí tài khoản mới</a>
                    </p>

                </div>
            </form>
        </section>
    </div>
