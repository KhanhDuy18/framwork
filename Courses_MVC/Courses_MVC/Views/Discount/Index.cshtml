@model IEnumerable<Courses_MVC.Models.Discount>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.discription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sale)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.discription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sale)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.discountId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.discountId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.discountId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
